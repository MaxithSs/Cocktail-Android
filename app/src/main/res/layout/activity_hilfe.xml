<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hilfe_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:orientation="vertical"
    tools:context=".Hilfe">

    <TextView
        android:id="@+id/hilfe_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0"
        android:fontFamily="@font/bebasneue"
        android:text="Hilfe"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebasneue"
        android:text="1) QR-Code für Internet scannen"
        android:textColor="#fff"
        android:textSize="26dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2) Cocktail bestellen"
        android:textSize="26dp"
        android:fontFamily="@font/bebasneue"
        android:textColor="#fff" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3) Nummer merken"
        android:textSize="26dp"
        android:fontFamily="@font/bebasneue"
        android:textColor="#fff" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4) Abwarten bis Nummer auf Bildschirm erscheint "
        android:textColor="#fff"
        android:fontFamily="@font/bebasneue"
        android:textSize="26dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5) Wenn fertig hinten Abholen"
        android:textColor="#fff"
        android:fontFamily="@font/bebasneue"
        android:textSize="26dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6) Cocktail genießen"
        android:textColor="#fff"
        android:fontFamily="@font/bebasneue"
        android:textSize="26dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bei weiteren Problemen oder Fragen einfach an die Mitarbeiter wenden"
        android:textColor="#fff"
        android:fontFamily="@font/bebasneue"
        android:textSize="27dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>

</LinearLayout>